<form action="/movies/{{movie._id}}/edit-movie" method="post">

    <label for="title"> Title: 
        <input type="text" name="title" value="{{movie.title}}">
    </label>

    <label for="genre"> Genre: 
        <input type="text" name="genre" value="{{movie.genre}}">
    </label>

    <label for="plot"> Plot: 
        <input type="" name="plot" value="{{movie.plot}}">
    </label>

    <select name="cast" multiple>
        {{#each fame}}
            <option value="{{_id}}">{{name}}</option>
        {{/each}}
    </select>

    <button type="submit">
        Update
    </button>

</form>

<style>
    form {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
</style>